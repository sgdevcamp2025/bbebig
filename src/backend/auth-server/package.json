{
  "name": "auth-server",
  "version": "1.0.0",
  "description": "인증관련 기능을 처리합니다.",
  "scripts": {
    "build": "tsc && tsc-alias",
    "generate": "prisma generate",
    "start": "node dist/main.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'tsx' main.ts",
    "test": "jest --config jest.config.cjs",
    "test:watch": "jest --config jest.config.cjs --watch",
    "lint": "lint-staged"
  },
  "author": "Jihyeong LEE",
  "license": "ISC",
  "dependencies": {
    "@fastify/cookie": "^11.0.0",
    "@fastify/cors": "^10.0.0",
    "@fastify/redis": "^7.0.2",
    "@fastify/swagger": "^9.0.0",
    "@fastify/swagger-ui": "^5.0.0",
    "@prisma/client": "^6.2.1",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.7",
    "fastify": "^5.0.0",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.24.1",
    "fastify-type-provider-zod": "^4.0.2"
  },
  "packageManager": "yarn@1.22.1",
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@jest/globals": "29.1.1",
    "@types/bcrypt": "^5.0.2",
    "@types/dotenv": "^8.2.3",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.6",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jest": "29.1.1",
    "jest-environment-jsdom": "29.1.1",
    "lint-staged": "^15.3.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "pretty-quick": "^4.0.0",
    "prisma": "^6.2.1",
    "ts-jest": "29.1.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,jsx,tsx}": [
      "pretty-quick --staged",
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "ignorePatterns": [
      ".yarn/**",
      ".pnp.*"
    ]
  }
}
